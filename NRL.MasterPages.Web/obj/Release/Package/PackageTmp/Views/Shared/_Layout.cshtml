@using NRL.MasterPages.Common

<!DOCTYPE html>
<html>
<head>
    <title>@Html.Title()</title>
    @if (!Html.IsMarkOnlyUpRequest())
    {
    <script src="http://code.jquery.com/jquery-2.1.1.js"></script>
    }

    <!-- Common CSS for all the Clubs -> Sets Font Size and Family -->
    <!-- -> Sets Background Image because ALL THE CLUBS have the SAME NAME for that IMAGE, otherwise it would had to be done in the club specific one -->
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, target-densitydpi=160dpi, initial-scale=1">

    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,800' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" media="screen" href="//@Html.Resources()/css/commonglobal">
    <link rel="stylesheet" href="//@Html.Resources()/css/global">

    <link rel="stylesheet" media="only screen and (min-width: 700px)" href="//@Html.Resources()/css/commondesktop">
    <link rel="stylesheet" href="//@Html.Resources()/css/desktop">

    <!-- Array with Menus -->
    <script src="//@Html.Resources()/json/menuItems"></script>

    <!-- Script that will Generate the Menus based on a JSON Array -->
    <script src="//@Html.Resources()/script/MenuGenerator"></script>

    <!-- Other Javascript -->
    <script src="//@Html.Resources()/script/menu"></script>
    <script src="//@Html.Resources()/script/googleAnalytics"></script>

</head>
<body class="nrl-body">
    <i id="icon-menu" class="icon-menu"></i>
    <div id="nrl-container">
        <header class="nrl-header">
            <div id="nrl-logo"><a><em></em></a></div>
            <div id="nrl-mobile-logo"><a><img src="//@Html.Resources()/Png/logo-mobile" height="44px"></a></div>
            <div id="nrl-sponsor"><a><img src="//@Html.Resources()/Png/sponsor"></a></div>
            <div id="nrl-AdLeaderboard"><a><img src="//@Html.Resources()/Png/adspot"></a></div>
        </header>
        <nav class="nrl-nav clubMenu">
            <ul class="nrl-menu-list"><li class="home"><a href="/">Home</a></li></ul>

        </nav>
        <div id="nrl-content">
            <div id="nrl-contentWrapper">
                @RenderBody()
            </div>            
            @Html.Partial("_footer")
        </div>
    </div>
</body>
</html>
